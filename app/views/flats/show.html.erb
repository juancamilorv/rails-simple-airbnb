<div class="row row-cols-3">
  <div class="col">
    <div class="card">
      <img src="../../assets/images/moon.jpeg" class="card-img-top" alt="card picture">
      <div class="card-body">
        <h5 class="card-title"><%= @flat.name %></h5>
        <h6 class="card-subtitle"><%= @flat.address %></h6>
        <i class="card-text fa-solid fa-people-line"><%= @flat.number_of_guests %></i>
        <i class="card-text fa-solid fa-euro-sign"><%= @flat.price_per_night %></i>
        <%= link_to "More info", flat_path %>
        <%= link_to "Edit", edit_flat_path %>
        <%= link_to "Remove", @restaurant, method: :delete %>
      </div>
    </div>
  </div>
</div>
